    "express": "^4.18.1",
    "express-fileupload": "^1.4.0",
    "mongoose": "^6.4.0",
    "morgan": "^1.10.0",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "nodemon": "^2.0.16"
  }
}
